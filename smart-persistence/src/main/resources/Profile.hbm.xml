<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.github.smart.domain.Profile" table="PROFILE" lazy="false">
        <id name="id" type="long">
            <column name="ID" />
            <generator class="increment" />
        </id>

        <property name="brand" type="string">
            <column name="BRAND" not-null="true"/>
        </property>

        <property name="individual" type="string">
            <column name="EM" not-null="true"/>
        </property>

        <property name="dateOfBirth" type="date">
            <column name="DATE_OF_BIRTH" not-null="true"/>
        </property>

        <property name="registerTime" type="timestamp" not-null="true">
            <column name="REGISTER_TIME" not-null="true" />
        </property>

        <component name="address" class="com.github.smart.domain.Address"

    </class>
</hibernate-mapping>